{
	"name": "xhh-g2",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "yarn workspaces foreach -Apit run dev",
		"build": "yarn workspaces foreach -Apit run build",
		"start": "yarn workspaces foreach -Apit run start",
		"ts-check": "yarn tsc --noEmit",
		"eslint-check": "NODE_OPTIONS='--experimental-strip-types --no-warnings=ExperimentalWarning' yarn eslint .",
		"eslint-fix": "NODE_OPTIONS='--experimental-strip-types --no-warnings=ExperimentalWarning' yarn eslint --fix .",
		"stylelint-check": "yarn stylelint .",
		"stylelint-fix": "yarn stylelint --fix .",
		"prettier-check": "NODE_OPTIONS='--experimental-strip-types --no-warnings=ExperimentalWarning' yarn prettier . --check",
		"prettier-fix": "NODE_OPTIONS='--experimental-strip-types --no-warnings=ExperimentalWarning' yarn prettier . --write",
		"lint": "NODE_OPTIONS='--experimental-strip-types --no-warnings=ExperimentalWarning' yarn lint-staged",
		"postinstall": "ln -sf $(pwd)/githooks/* .git/hooks || true"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.31.0",
		"@types/node": "^24.0.14",
		"@typescript-eslint/types": "^8.37.0",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-prettier": "^5.5.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-solid": "^0.14.5",
		"globals": "^16.3.0",
		"jiti": "^2.4.2",
		"lint-staged": "^16.1.2",
		"prettier": "^3.6.2",
		"stylelint": "^16.21.1",
		"stylelint-config-recess-order": "^7.1.0",
		"stylelint-config-standard": "^38.0.0",
		"stylelint-order": "^7.0.0",
		"ts-config": "workspace:*",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.37.0"
	},
	"engines": {
		"node": "^22.17.0",
		"yarn": "^4.9.2"
	},
	"packageManager": "yarn@4.9.2"
}
